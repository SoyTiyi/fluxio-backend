generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String 
  lastname String
  email String @unique
  password String
  profileImage String?
  companies Company[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id Int @default(autoincrement()) @id
  name String
  address String
  description String
  companyImage String?
  owner User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
  services Service[]
  clients Client[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id Int @default(autoincrement()) @id
  name String
  description String
  price Decimal
  duration Int
  company Company? @relation(fields: [companyId], references: [id])
  companyId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id Int @default(autoincrement()) @id
  name String
  phone String?
  email String?
  company Company? @relation(fields: [companyId], references: [id])
  companyId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sale {
  id Int @default(autoincrement()) @id
  amount Decimal
  isPaid Boolean
  company Company? @relation(fields: [companyId], references: [id])
  companyId Int?
  service Service? @relation(fields: [serviceId], references: [id])
  serviceId Int?
  cliente Client? @relation(fields: [clientId], references: [id])
  clientId Int?
  saleDate DateTime  @default(now()) 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
